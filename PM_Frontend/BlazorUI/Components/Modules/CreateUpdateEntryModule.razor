@code {
private string entryName = string.Empty;
private string website = string.Empty;
private string username = string.Empty;
private string password = string.Empty;
private string category = string.Empty;

[Parameter] public EventCallback<bool> OnClose { get; set; }

private void ClosePopup()
{
OnClose.InvokeAsync(false);
}

private void DeleteEntry()
{
}

private void UpdateEntry()
{
}
}

<div class="modal-overlay" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1050;">
    <div class="modal-dialog" style="position: relative; width: 700px; margin: 5% auto; background: white; padding: 20px; border-radius: 8px;">
        <div class="modal-header d-flex justify-content-between align-items-center" style="background-color: #00517D; color: white;">
            <h5 class="m-0">Edit entry</h5>
            <button type="button" class="close text-dark" style="font-size: 1.5rem;" @onclick="ClosePopup">&times;</button>
        </div>

        <div class="modal-body">
            <!-- First line: Name and Website -->
            <div class="d-flex justify-content-between mb-3">
                <div style="width: 48%;">
                    <label>Name</label>
                    <input type="text" class="form-control" @bind="entryName"/>
                </div>
                <div style="width: 48%;">
                    <label>Website</label>
                    <input type="text" class="form-control" @bind="website"/>
                </div>
            </div>


            <div class="d-flex justify-content-between mb-3">
                <div style="width: 30%;">
                    <label>Username</label>
                    <input type="text" class="form-control" @bind="username"/>
                </div>
                <div style="width: 30%;">
                    <label>Password</label>
                    <input type="text" class="form-control" @bind="password"/>
                </div>
                <div style="width: 30%;">
                    <label>Category</label>
                    <select class="form-control" @bind="category">
                        <option>Select</option>
                        <option>Social media</option>
                        <option>Work</option>
                        <option>Personal</option>
                    </select>
                </div>
            </div>

     
            <div class="d-flex justify-content-end">
                <button class="btn btn-secondary mr-2" style="margin-right: 10px;" @onclick="DeleteEntry">Delete</button>
                <button class="btn btn-secondary" @onclick="UpdateEntry">Update</button>
            </div>
        </div>
    </div>
</div>
