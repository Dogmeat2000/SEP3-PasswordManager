@using Shared.Dtos
@code {
    [Parameter]
    public List<LoginEntryDTO> Entries { get; set; }
    [Parameter]
    public string Category { get; set; }
}

<div class="loginEntry-section">
    @Category
</div>
<table class="loginEntry-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Website</th>
            <th>Username</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        @foreach (LoginEntryDTO loginEntry in Entries) {
            <tr>
                <th>@loginEntry.EntryName</th>
                <th><a href="@loginEntry.EntryAddress" target="_blank" rel="noopener norefferer">@loginEntry.EntryAddress</a></th>
                <th>@loginEntry.EntryUsername</th>
                <th>@loginEntry.EntryPassword</th>
            </tr>
        }
    </tbody>
</table>
